{
  "extends": "tsconfig/base.json",
  "compilerOptions": {
    "module": "Node16",
    "lib": [
      "ES2022"
    ],
    "moduleResolution": "Node16",
    "baseUrl": "./src",
    "outDir": "./dist",
    "paths": {
      "*": [
        "node_modules/*"
      ]
    },
  },
  "include": [
    "src/**/*.ts",
    "src/**/*.json"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}